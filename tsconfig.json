{
	"compilerOptions": {
		"outDir": "dist/assets",
		"target": "ES5",
		"module": "commonjs",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"removeComments": false,
		"noImplicitAny": true,
		"lib": [ "es2015", "dom" ],
		"suppressImplicitAnyIndexErrors": true
	},
    "include": [
        "src/**/*.ts"
    ],
	"exclude": [
		"node_modules/**/*"
	]
}